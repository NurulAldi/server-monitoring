{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "key-spacing": ["error"],
    "space-before-function-paren": ["error", "never"],
    "func-names": ["off"],
    "no-process-exit": ["off"],
    "no-sync": ["warn"]
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "logs/",
    "*.test.js",
    "*.spec.js"
  ]
}